<Page x:Class="Центр_занятости.Rabocie.Add.Obrasovanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Центр_занятости.Rabocie.Add"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Obrasovanie">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="133*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Наименование" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="30" Grid.Column="0" Grid.Row="0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="300" Height="30" HorizontalAlignment="Left" Margin="30" x:Name="naimenovanie"/>
        <Button Content="Добавить" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" x:Name="add" Click="add_Click"/>
    </Grid>
</Page>
