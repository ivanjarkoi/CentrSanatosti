<Page x:Class="Центр_занятости.OtdelKadrov.Vsaimodejstvie.Rabotniki"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Центр_занятости.OtdelKadrov.Vsaimodejstvie"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      IsVisibleChanged="Page_IsVisibleChanged"
      Title="Работники">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="389*"/>
            <ColumnDefinition Width="411*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="359*"/>
        </Grid.RowDefinitions>
        <Button  Width="200" Height="50"  x:Name="addRol" Click="addRol_Click"  Grid.Row="0" Grid.Column="0" Content="Добавить" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Template="{DynamicResource Knopki}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button  Width="200" Height="50"  x:Name="removeRol" Click="removeRol_Click"  Grid.Row="0" Grid.Column="1" Content="Удалить" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Template="{DynamicResource Knopki}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="DataGrid1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин"  Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Пароль"  Binding="{Binding Parol}"/>
                <DataGridTextColumn Header="ФИО"  Binding="{Binding FIO}"/>
                <DataGridTextColumn Header="Дата рождения"  Binding="{Binding DateRojdenia, StringFormat={}{0:d}}"/>
                <DataGridTextColumn Header="Почта"  Binding="{Binding Pocta}"/>
                <DataGridTextColumn Header="Роль"  Binding="{Binding RolRabotnicov.Naimenovanie}"/>
                <DataGridTextColumn Header="График"  Binding="{Binding NomerGrafika}"/>
                <DataGridTextColumn Header="Оплата"  Binding="{Binding Oplata}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  Width="200" Height="50"  x:Name="updateRol" Click="updateRol_Click"  Grid.Row="0" Grid.Column="1" Content="Изменить" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Template="{DynamicResource Knopki}">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
