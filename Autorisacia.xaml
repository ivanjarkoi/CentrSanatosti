<Page x:Class="Центр_занятости.Autorisacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Центр_занятости"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизоваться">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="97"/>
        <RowDefinition Height="108"/>
        <RowDefinition Height="71"/>
        <RowDefinition Height="174"/>
    </Grid.RowDefinitions>
    <TextBox x:Name="login" Width="300" Height="50" Grid.Row="0"/>
    <PasswordBox x:Name="password" VerticalAlignment="Center" Grid.Row="1" Width="300" Height="50" HorizontalAlignment="Center"/>
    <Button  Width="200" Height="50"  x:Name="avtorisaacia" Click="avtorisaacia_Click" Grid.Row="2" Content="Авторизация" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Template="{DynamicResource Knopki}">
        <Button.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Button.RenderTransform>
    </Button>
    
    </Grid>
</Page>
